@model IEnumerable<DierentuinOpdracht.Models.Enclosure>
@using DierentuinOpdracht.Models.Enums

@{
    ViewData["Title"] = "Enclosures";
}

<h1>Enclosures</h1>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-md-3">
                <label class="form-label">Search (Name)</label>
                <input name="search" class="form-control" value="@ViewBag.Search" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Climate</label>
                <select name="climate" class="form-control">
                    <option value="">-- All --</option>
                    @foreach (var item in Html.GetEnumSelectList<Climate>())
                    {
                        <option value="@item.Value" selected="@(ViewBag.Climate != null && item.Value == ((int)ViewBag.Climate).ToString())">@item.Text</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Habitat</label>
                <select name="habitatType" class="form-control" asp-items="ViewBag.HabitatOptions"></select>

            </div>

            <div class="col-md-2">
                <label class="form-label">Security</label>
                <select name="securityLevel" class="form-control">
                    <option value="">-- All --</option>
                    @foreach (var item in Html.GetEnumSelectList<SecurityLevel>())
                    {
                        <option value="@item.Value" selected="@(ViewBag.SecurityLevel != null && item.Value == ((int)ViewBag.SecurityLevel).ToString())">@item.Text</option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">Zoo</label>
                <select name="zooId" class="form-control" asp-items="ViewBag.Zoos">
                    <option value="">-- All --</option>
                </select>
            </div>

            <div class="col-md-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a asp-action="Index" class="btn btn-secondary">Reset</a>
                <a asp-action="Create" class="btn btn-success">Create new</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Climate</th>
            <th>Habitat</th>
            <th>Security</th>
            <th>Zoo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Size</td>
                <td>@item.Climate</td>
                <td>@item.HabitatType</td>
                <td>@item.SecurityLevel</td>
                <td>@(item.Zoo != null ? item.Zoo.Name : "NULL")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-action="Sunrise" asp-route-id="@item.Id">Sunrise</a> |
                    <a asp-action="Sunset" asp-route-id="@item.Id">Sunset</a> |
                    <a asp-action="FeedingTime" asp-route-id="@item.Id">Feeding</a> |
                    <a asp-action="CheckConstraints" asp-route-id="@item.Id">Constraints</a>
                </td>
            </tr>
        }
    </tbody>
</table>
