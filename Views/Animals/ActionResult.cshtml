@{
    ViewData["Title"] = ViewBag.Title ?? "Action";
}


<div class="container mt-4">
    <h1 class="mb-3">@ViewBag.Title</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.AnimalName</h5>
            <p class="card-text">@ViewBag.Message</p>

            <a asp-action="Index" class="btn btn-secondary">Back to Animals</a>
        </div>
    </div>
</div>
